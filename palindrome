def IsPalindrone(word): 
    first = 0
    last = len(word)-1
    palindrome = True
    
    while first <= last and palindrome == True:
        if word[first] == word[last]:
            palindrome = True
            first += 1
            last -= 1
        else:
            palindrome = False
    return palindrome
    
print(IsPalindrone("kayak"))
